{
  "manifest_version": 2,
  "name": "News Spectrum",
  "version": "0.1",
  "permissions": ["activeTab", "cookies", "http://*/*", "https://*/*", "tabs"],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery-3.3.1.min.js", "content.js"]
    }
  ],
  "browser_action": {
      "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  }
}